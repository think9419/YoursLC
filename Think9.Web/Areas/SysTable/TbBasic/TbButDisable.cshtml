            elem: '#ObjId3',//定义输入框input对象 必填
            checkedKey: 'Id',//表格的唯一建值，影响到选中状态 必填
            searchKey: 'keyword',//搜索输入框的id值
            searchPlaceholder: '关键词搜索',//搜索输入框的提示文字
            table: {
                url: '/SysTable/TbBasic/GetObjListForPage?type=3',
                limits: [10, 50, 100],
