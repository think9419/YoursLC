            }
        })

        let ThisTable = table.render({
            elem: "#tableId",
            url: "/SysTable/TbBasic/GetTbButDisableList?tbid=" + $('#tbid').val() + "&btnid=" + $('#btnid').val() + "&pageType=" + $('#pageType').val(),
            page: false,
            method: "get",
            defaultToolbar: [{ title: '显示所有数据', layEvent: 'refresh', icon: 'layui-bg-gray layui-icon-refresh' }],
            toolbar: "#toolbarTpl",
            cols: [[
                { type: "checkbox", fixed: 'left' },
                { type: "numbers", title: "NO.", fixed: 'left' },
                { field: "BtnId", title: "按钮编码", sort: true },
                { field: "ObjType", title: "对象类别", sort: true, width: 100, templet: "#ObjType" },
                { field: "ObjId", title: "对象编码", sort: true }

            ]],
            done: function (res, curr, count) {
            },
            text: {
                none: '无数据'
            }
        });

        table.on("toolbar(tableFilter)", function (obj) {
            switch (obj.event) {
                case "refresh":
                    refresh();
                    break;
                case "batchDel":
                    batchDel();
                    break;
            }
        });

        form.on("submit(add)", function () {
            if ($("#ObjId").val().trim() == '') {
                layer.msg('请选择组织机构');
                return false;
            }
            exUtils.ajax("/SysTable/TbBasic/AddTbButDisable", "post", { tbid: $("#tbid").val(), idsStr: $("#ObjId").val(), btnid: $("#btnid").val(), pageType: $("#pageType").val(), objType: 1 }, true).done(function (response) {
                exLayer.greenTickMsg(response.message, function () {
                    refresh();
                });
                $("#ObjId").val('');
            }).fail(function (error) {
                console.log(error);
            });
            return false;
        });

        form.on("submit(add2)", function () {
            if ($("#ObjId2").val().trim() == '') {
                layer.msg('请选择角色');
                return false;
            }
            exUtils.ajax("/SysTable/TbBasic/AddTbButDisable", "post", { tbid: $("#tbid").val(), idsStr: $("#ObjId2").val(), btnid: $("#btnid").val(), pageType: $("#pageType").val(), objType: 2 }, true).done(function (response) {
                exLayer.greenTickMsg(response.message, function () {
                    refresh();
                });
                $("#ObjId2").val('');
            }).fail(function (error) {
                console.log(error);
            });
            return false;
        });

        form.on("submit(add3)", function () {
