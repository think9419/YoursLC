                layer.msg('请选择用户');
                return false;
            }
            exUtils.ajax("/SysTable/TbBasic/AddTbButDisable", "post", { tbid: $("#tbid").val(), idsStr: $("#ObjId3").val(), btnid: $("#btnid").val(), pageType: $("#pageType").val(), objType: 3 }, true).done(function (response) {
                exLayer.greenTickMsg(response.message, function () {
                    refresh();
                });
                $("#ObjId3").val('');
            }).fail(function (error) {
                console.log(error);
            });
            return false;
        });

        function refresh() {
            ThisTable.reload({
                url: "/SysTable/TbBasic/GetTbButDisableList?tbid=" + $('#tbid').val() + "&btnid=" + $('#btnid').val() + "&pageType=" + $('#pageType').val()
            });
        }

        function batchDel() {
            var idsStr = "";
            var checkStatus = table.checkStatus("tableId");
            var rows = checkStatus.data.length;
            if (rows > 0) {
                for (var i = 0; i < checkStatus.data.length; i++) {
                    idsStr += checkStatus.data[i].id + ",";
                }
            } else {
                layer.msg("未选择有效数据");
                return false;
            }

            exLayer.confirm("确定要删除吗？", function (index) {
                layer.close(index);
                if (idsStr) {
                    exUtils.ajax("/SysTable/TbBasic/DelTbButDisable", "get", { tbid: $("#tbid").val(), idsStr: idsStr }, true).done(function (response) {
                        refresh();
                    }).fail(function (error) {
                        console.log(error);
                    });
                }
            });
        }
