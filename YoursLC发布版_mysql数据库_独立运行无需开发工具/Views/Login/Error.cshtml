@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["StatusCode"].ToString()</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <style>
        .box {
            text-align: center;
            font-size: 14px;
        }

            .box .iconfont {
                font-size: 300px;
            }
    </style>
</head>
<body>
    <div class="box">
        @{ if (int.Parse(ViewData["StatusCode"].ToString()) == 500)
            {

<p>@ViewData["StatusCode"].ToString()</p>
                <p>服务器错误啦！</p> }
            if (int.Parse(ViewData["StatusCode"].ToString()) == 403)
            {

<p>@ViewData["StatusCode"].ToString()</p>
                <p>禁止越界！</p> }
            if (int.Parse(ViewData["StatusCode"].ToString()) == 404)
            {

<p>@ViewData["StatusCode"].ToString()</p>
                <p>页面找不到了！</p> } }
    </div>
</body>
</html>