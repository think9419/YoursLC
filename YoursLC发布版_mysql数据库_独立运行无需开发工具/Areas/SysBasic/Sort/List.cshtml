@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Shared/_LayuiList.cshtml";
}

<input style="display: none" name="classid" id="classid" value="@ViewBag.ClassID">
<!--数据表格-->
<table class="layui-hide" id="tableId" lay-filter="tableFilter"></table>
<script src="~/lib/layui/layui.js" charset="utf-8"></script>

<script>
    layui.use(["table", "form", "exLayer", "exUtils"], function () {
        let table = layui.table;
        let form = layui.form;
        let exLayer = layui.exLayer;
        let exUtils = layui.exUtils;

        let $ = layui.$;

        form.render(); //

        let ThisTable = table.render({
            elem: "#tableId",
            url: "/SysBasic/Sort/GetList?classid=" + $("#classid").val(),
            limits: [10, 50, 100],
            limit: 10,
            page: true,
            defaultToolbar: [{ title: '显示所有数据', layEvent: 'refresh', icon: 'layui-icon-refresh' }, 'exports', 'filter'],
            toolbar: "#toolbarTpl",
            cols: [[
                { type: "numbers", title: "NO.", fixed: 'left' },
                { field: "SortID", title: "分类编码", width: 150, sort: true },
                { field: "SortName", title: "分类名称", sort: true, width: layui.device().mobile ? 200 : null },
                { field: "SortOrder", title: "序号", width: 80, sort: true, align: "center" },
                { title: "操作", width: 120, align: "center", fixed: layui.device().mobile ? null : 'right', templet: "#operationTpl" }
            ]],
            done: function (res, curr, count) {
                //console.log(res, curr, count);
            }
        });

        table.on("toolbar(tableFilter)", function (obj) {
            switch (obj.event) {
                case "add":
                    add();
                    break;
                case "refresh":
                    refresh();
                    break;
            }
        });

        table.on("tool(tableFilter)", function (obj) {
            let data = obj.data;
            switch (obj.event) {
                case "edit":
                    edit(data.SortID);
                    break;
                case "del":
                    del($("#classid").val(), data.SortID);
                    break;
            }
        });

        function add() {
            exLayer.open("新建分类", "/SysBasic/Sort/Add?classid=" + $("#classid").val(), '100%', '100%', '0px', '0px', null, null);
        }

        function edit(IndexId) {
            exLayer.open("编辑分类", "/SysBasic/Sort/Edit?classid=" + $("#classid").val() + "&sortid=" + IndexId, '100%', '100%', '0px', '0px', null, null);
        }

        function del(classid, sortid) {
            exLayer.confirm("确定要删除吗？", function () {
                exUtils.ajax("/SysBasic/Sort/Delete", "get", { classid: $("#classid").val(), sortid: sortid }, true).done(function (response) {
                    exUtils.tableSuccessMsg(response.message);
                    $(".layui-laypage-btn")[0].click();
                }).fail(function (error) {
                    console.log(error);
                });
            })
        }

        function refresh() {
            ThisTable.reload({
                url: "/SysBasic/Sort/GetList?classid=" + $("#classid").val()
            });
        }
    });
</script>
<script type="text/html" id="toolbarTpl">
    <button type="button" class="layui-btn layui-btn-normal layui-btn-sm" lay-event="add" id="add"><i class="fa fa-plus"></i>新建分类</button>
</script>
<!-- 行工具栏模板 -->
<script type="text/html" id="operationTpl">
    <a class="layui-btn layui-btn-normal layui-btn-xs" href="javascript:;" lay-event="edit" id="edit">编辑</a>
    <a class="layui-btn layui-btn-xs layui-btn-danger" href="javascript:;" lay-event="del" id="del">删除</a>
</script>