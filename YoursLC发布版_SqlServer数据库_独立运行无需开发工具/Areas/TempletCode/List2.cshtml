@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Shared/_LayuiList.cshtml";
}

<input style="display: none" name="rpid" id="rpid" value="@ViewBag.rpid">
<blockquote class="layui-elem-quote layui-text">
    生成代码时，首先会在AppTempletFile目录下寻找对应的『模板文件』，存在匹配文件会拷贝该文件，不存在时按照最新配置生成文件<br>
    点击『生成模板』按钮，系统会从Views文件夹及wwwroot/Reports、wwwroot/Self_JS、AppCreatCode文件夹中拷贝现有文件作为『模板文件』，再次生成代码时，会拷贝最新生成的『模板文件』
</blockquote>
<span style="position: absolute;top: 20px; right: 20px;" id="blockquote_close">
    <i class="fa fa-close" style="color: #FFAB00;"></i>
</span>
<!--数据表格-->
<table class="layui-hide" id="tableId" lay-filter="tableFilter"></table>
<script src="~/lib/layui/layui.js" charset="utf-8"></script>

<script>
    layui.use(["table", "form", "exLayer", "exUtils"], function () {
        let table = layui.table;
        let form = layui.form;
        let exLayer = layui.exLayer;
        let exUtils = layui.exUtils;

        let $ = layui.$;

        form.render(); //

        $("#blockquote_close").click(function () {
            $(".layui-elem-quote").attr("style", "display:none");
            $("#blockquote_close").attr("style", "display:none");
        });

        let ThisTable = table.render({
            elem: "#tableId",
            url: "/SysBasic/TempletCode/GetList2?rpid=" + $("#rpid").val(),
            page: false,
            defaultToolbar: [{ title: '显示所有数据', layEvent: 'refresh', icon: 'layui-icon-refresh' }, 'exports', 'filter'],
            toolbar: "#toolbarTpl",
            cols: [[
                { type: "checkbox", fixed: 'left' },
                { type: "numbers", title: "NO.", fixed: 'left' },
                { field: "Type", title: "类别", width: 60 },
                { field: "FilePath", title: "路径", sort: true, width: layui.device().mobile ? 200 : null },
                { field: "CreationTime", title: "创建时间", sort: true, width: 200 },
                { field: "LastWriteTime", title: "最后修改", width: 200, sort: true },
                { field: "Description", title: "备注", width: 250 },
                { title: "操作", width: 80, align: "center", fixed: layui.device().mobile ? null : 'right', templet: "#operationTpl" }
            ]],
            done: function (res, curr, count) {
                //console.log(res, curr, count);
                if (layui.device().mobile) {
                    $("#batchDel").html('<i class="fa fa-trash-o"></i>删除');
                    $("#creat").html('<i class="fa fa-plus"></i>生成');
                }
            }
        });

        table.on("toolbar(tableFilter)", function (obj) {
            switch (obj.event) {
                case "creat":
                    creat();
                    break;
                case "refresh":
                    refresh();
                    break;
                case "batchDel":
                    batchDel();
                    break;
            }
        });

        table.on("tool(tableFilter)", function (obj) {
            let data = obj.data;
            switch (obj.event) {
                case "detail":
                    detail(data.FilePath, data.Type);
                    break;
            }
        });

        function creat() {
            exLayer.open("生成『模板文件』", "/SysBasic/TempletCode/CreateList2?rpid=" + $("#rpid").val(), '100%', '100%', '0px', '0px', null, null);
        }

        function refresh() {
            ThisTable.reload({
                url: "/SysBasic/TempletCode/GetList2?rpid=" + $("#rpid").val()
            });
        }

        function detail(path, type) {
            exLayer.open("查看", "/SysBasic/TempletCode/CodeDetail?path=" + path + "&type=" + type, '100%', '100%', '0px', '0px', null, null);
        }

        function batchDel() {
            var idsStr = "";
            var checkStatus = table.checkStatus("tableId");
            var rows = checkStatus.data.length;
            if (rows > 0) {
                for (var i = 0; i < checkStatus.data.length; i++) {
                    idsStr += checkStatus.data[i].FilePath + ",";
                }
            } else {
                layer.msg("未选择有效数据");
                return false;
            }
            exLayer.confirm("确定要删除吗？", function (index) {
                layer.close(index);
                if (idsStr) {
                    exUtils.ajax("/SysBasic/TempletCode/BatchDel", "post", { idsStr: idsStr }, true).done(function (response) {
                        exUtils.tableSuccessMsg(response.message);
                        refresh();
                    }).fail(function (error) {
                        console.log(error);
                    });
                }
            });
        }
    });
</script>
<script type="text/html" id="toolbarTpl">
    <button type="button" class="layui-btn layui-btn-danger layui-btn-sm" lay-event="batchDel" id="batchDel"><i class="fa fa-trash-o"></i>批量删除</button>
    <button type="button" class="layui-btn layui-btn-normal layui-btn-sm" lay-event="creat" id="creat"><i class="fa fa-file-o"></i>生成模板</button>
</script>
<!-- 行工具栏模板 -->
<script type="text/html" id="operationTpl">
    <a class="layui-btn layui-btn-normal layui-btn-xs" href="/SysBasic/TempletCode/CodeDetail?path={{d.FilePath}}&type={{d.Type}}&but=edit&tbid={{d.TbId}}"    target="_blank" id="detail">查看</a>
</script>