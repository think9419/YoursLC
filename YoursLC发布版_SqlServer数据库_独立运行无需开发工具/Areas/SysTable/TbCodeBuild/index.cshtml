        <a href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn11" lay-tips="录入表基本属性">属性</a>
        <a href='javascript:;' style="width:60px" class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn12" lay-tips="录入表指标管理">指标{{ d.indexCount }}</a>
        <a href='javascript:;' style="width:60px" class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn_11" lay-tips="录入表数据读取">读取{{ d.TbRelationCount11 }}</a>
        <a href='javascript:;' style="width:60px" class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn_31" lay-tips="录入表数据回写">回写{{ d.TbRelationCount31 }}</a>
        <a href='javascript:;' style="width:60px" class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn32" lay-tips="自定义录入校验">校验{{ d.ValueCheckCount }}</a>
        <a href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn23" lay-tips="录入表页面按钮">按钮</a>
        <a href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn22" lay-tips="录入表权限">权限</a>
        <a href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn24" lay-tips="公共附件属性">附件</a>
        <a href='javascript:;' style="width:60px" class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn99" lay-tips="管理录入表子表">子表{{ d.GridCount }}</a>
         <a style="width:60px" href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn39" lay-tips="代码模板">模板{{ d.TempletCount }}</a>
        <a style="width:60px" href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn40" lay-tips="代码备份">备份{{ d.TempDirectoryCount }}</a>
        <a href='javascript:;' class="layui-btn layui-btn-normal layui-btn-xs" lay-event="btn14" lay-tips="录入表表单设计">设计</a>
    </div>
</script>
